<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.callToCustomer.CallToCustomer">

    <include layout="@layout/app_bar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_weight="0.5"
                        android:text="@string/branch"
                        android:textColor="@android:color/black" />

                    <Button
                        android:id="@+id/button_select_branch"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/edit_text_height"
                        android:layout_marginTop="4dp"
                        android:layout_weight="1.5"
                        android:background="@drawable/outline_background_color_primary"
                        android:drawableEnd="@drawable/ic_nav_next"
                        android:gravity="start|center_vertical"
                        android:paddingStart="@dimen/edit_text_padding"
                        android:paddingEnd="@dimen/edit_text_padding"
                        android:text="@string/please_select"
                        android:textAllCaps="false" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="@string/date"
                        android:textColor="@android:color/black" />

                    <Button
                        android:id="@+id/btn_select_date_call"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/edit_text_height"
                        android:layout_marginTop="4dp"
                        android:layout_weight="1.5"
                        android:background="@drawable/outline_background_color_primary"
                        android:drawableEnd="@drawable/ic_calendar"
                        android:maxLines="2"
                        android:paddingStart="@dimen/edit_text_padding"
                        android:paddingEnd="@dimen/edit_text_padding"
                        android:text="@string/please_select"
                        android:textAlignment="textStart"
                        android:textSize="@dimen/small_text_size" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/destination_from"
                        android:textColor="@android:color/black" />

                    <Button
                        android:id="@+id/button_select_destination_from"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edit_text_height"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/outline_background_color_primary"
                        android:drawableEnd="@drawable/ic_nav_next"
                        android:gravity="start|center_vertical"
                        android:paddingStart="@dimen/edit_text_padding"
                        android:paddingEnd="@dimen/edit_text_padding"
                        android:text="@string/please_select"
                        android:textAllCaps="false" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.5"
                        android:text="Mobile Op."
                        android:textColor="@android:color/black" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_weight="1.5"
                        android:background="@drawable/outline_background_color_primary"
                        android:orientation="vertical">

                        <com.jaredrummler.materialspinner.MaterialSpinner
                            android:id="@+id/spinnerOperator"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/edit_text_height"
                            android:layout_margin="2dp"
                            android:background="@drawable/outline_background_color_primary"
                            android:gravity="start|center_vertical"
                            android:paddingStart="@dimen/edit_text_padding"
                            android:paddingEnd="@dimen/edit_text_padding"
                            android:text="All"
                            android:textAllCaps="false" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="ទីតាំងលេខធ្នើរ"
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />

                    <Button
                        android:enabled="false"
                        android:id="@+id/btnLocationCall"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/edit_text_height"
                        android:layout_marginTop="4dp"
                        android:layout_weight="1.5"
                        android:background="@drawable/outline_background_color_primary"
                        android:drawableEnd="@drawable/ic_nav_next"
                        android:gravity="start|center_vertical"
                        android:paddingStart="@dimen/edit_text_padding"
                        android:paddingEnd="@dimen/edit_text_padding"
                        android:text="@string/please_select"
                        android:textAllCaps="false" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.5"
                        android:text="@string/receiver_telephone"
                        android:textColor="@android:color/black" />

                    <EditText
                        android:id="@+id/edtReceiveTel"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/edit_text_height"
                        android:layout_marginTop="4dp"
                        android:layout_weight="1.5"
                        android:background="@drawable/outline_background_color_primary"
                        android:gravity="start|center_vertical"
                        android:hint="@string/receiver_telephone"
                        android:inputType="numberDecimal"
                        android:paddingStart="@dimen/edit_text_padding"
                        android:paddingEnd="@dimen/edit_text_padding"
                        android:textAllCaps="false" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.5"
                        android:text="@string/type"
                        android:textColor="@android:color/black" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_weight="1.5"
                        android:background="@drawable/outline_background_color_primary"
                        android:orientation="vertical">

                        <com.jaredrummler.materialspinner.MaterialSpinner
                            android:id="@+id/spinnerType"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/edit_text_height"
                            android:layout_margin="2dp"
                            android:background="@drawable/outline_background_color_primary"
                            android:gravity="start|center_vertical"
                            android:text="All"
                            android:textAllCaps="false" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="0.5"
                        android:text="@string/status"
                        android:textColor="@android:color/black" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_weight="1.5"
                        android:background="@drawable/outline_background_color_primary"
                        android:orientation="vertical">

                        <com.jaredrummler.materialspinner.MaterialSpinner
                            android:id="@+id/spinnerStatus"
                            style="@style/Widget.AppCompat.Button.Borderless"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/edit_text_height"
                            android:layout_margin="2dp"
                            android:background="@drawable/outline_background_color_primary"
                            android:gravity="start|center_vertical"
                            android:text="All"
                            android:textAllCaps="false" />
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/button_start_Scan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorAccent"
                    android:onClick="goToDetail"
                    android:text="@string/search"
                    android:textColor="@color/white" />

                <LinearLayout
                    android:id="@+id/relativeLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="5dp"
                    android:orientation="horizontal"
                    android:weightSum="100"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/btn_transfer"
                    app:layout_constraintTop_toBottomOf="@+id/btn_transfer">

                    <View
                        android:id="@+id/v1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_weight="50"
                        android:background="@android:color/darker_gray" />

                    <TextView
                        android:id="@+id/v2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/v1"
                        android:text="@string/or"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@id/v2"
                        android:layout_weight="50"
                        android:background="@android:color/darker_gray" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="សូមចុចត្រង់នេះដើម្បីស្កែនលេខកូដ QR"
                    android:textColor="@color/black" />

                <Button
                    android:id="@+id/buttonScanQr"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_effect"
                    android:onClick="ScanQr"
                    android:text="ស្កែនតាមកាមេរ៉ាទូរស័ព្ទ"
                    android:textColor="@color/white" />

                <Button
                    android:id="@+id/buttonMobileScanner"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_effect"
                    android:onClick="ScanQrMobileScanner"
                    android:text="ស្កែនតាម Mobile Scanner"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</LinearLayout>