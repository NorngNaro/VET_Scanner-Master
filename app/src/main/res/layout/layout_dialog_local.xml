    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="8dp"
        android:text="@string/membership_code"
        android:textColor="@android:color/black"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/edit_text_height"
        android:orientation="horizontal"

        android:visibility="gone">

        <ImageView
            android:id="@+id/button_scan_membership"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="2dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/button_effect"
            android:clickable="true"
            android:contentDescription="@string/image_content_desc"
            android:elevation="2dp"
            android:focusable="true"
            android:src="@drawable/qr_code" />

        <EditText
            android:id="@+id/goods_transfer_membership_local"
            android:layout_width="0dp"
            android:layout_height="@dimen/edit_text_height"
            android:layout_marginEnd="8dp"
            android:layout_weight="4"
            android:background="@drawable/outline_background_color_primary"
            android:clickable="false"
            android:enabled="false"
            android:hint="@string/hint_membership_code"
            android:inputType="text"
            android:padding="@dimen/edit_text_padding"
            android:text="0"
            android:textSize="@dimen/small_text_size" />

        <EditText
            android:id="@+id/goods_transfer_percentage_local"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/outline_background_color_primary"
            android:inputType="number"
            android:maxLength="4"
            android:padding="@dimen/edit_text_padding"
            android:text="0"
            android:textSize="@dimen/small_text_size" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="4dp"
            android:text="%"
            android:textColor="@android:color/black" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/total_amount"
        android:textColor="@android:color/black"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/edit_text_height"
        android:layout_marginTop="4dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/goods_transfer_total_amount"
            android:layout_width="0dp"
            android:layout_height="@dimen/edit_text_height"
            android:layout_weight="1"
            android:background="@drawable/outline_background_color_primary"
            android:clickable="false"
            android:enabled="false"
            android:gravity="center_vertical"
            android:hint="@string/price_hint"
            android:paddingStart="@dimen/edit_text_padding"
            android:paddingEnd="@dimen/edit_text_padding"
            android:textColor="@android:color/black"
            android:textSize="@dimen/small_text_size" />

        <TextView
            android:id="@+id/total_amount_symbol"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="@dimen/edit_text_padding"
            android:text=""
            android:textColor="@android:color/black" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/total_amount"
        android:textColor="@android:color/black"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/checkCollect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/collect_cod"
            android:textColor="@color/colorBlack"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="2">

        <Button
            android:id="@+id/button_paid"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:background="@drawable/button_effect"
            android:text="@string/paid"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_unpaid"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:background="@drawable/button_effect"
            android:text="@string/unpaid"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>