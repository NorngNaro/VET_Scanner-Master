<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.movetovan.ReceiveItemActivity">

    <include layout="@layout/app_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/date"
                android:textColor="@android:color/black" />

            <Button
                android:id="@+id/btn_select_date"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_text_height"
                android:layout_marginTop="4dp"
                android:background="@drawable/outline_background_color_primary"
                android:clickable="false"
                android:drawableEnd="@drawable/ic_calendar"
                android:inputType="date"
                android:maxLines="2"
                android:paddingStart="@dimen/edit_text_padding"
                android:paddingEnd="@dimen/edit_text_padding"
                android:text="@string/please_select"
                android:textAlignment="textStart"
                android:textSize="@dimen/small_text_size"
                tools:ignore="TextViewEdits" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/branch"
                android:textColor="@android:color/black" />

            <Button
                android:id="@+id/button_select_branch"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_text_height"
                android:layout_marginTop="4dp"
                android:background="@drawable/outline_background_color_primary"
                android:drawableEnd="@drawable/ic_nav_next"
                android:gravity="start|center_vertical"
                android:paddingStart="@dimen/edit_text_padding"
                android:paddingEnd="@dimen/edit_text_padding"
                android:text="@string/please_select"
                android:textAllCaps="false" />
        </LinearLayout>

        <Button
            android:id="@+id/button_start_Scan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/colorAccent"
            android:text="ស្កែនតាមកាមេរ៉ាទូរស័ព្ទ"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnMobileScan"
            android:textAllCaps="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/colorAccent"
            android:text="ស្កែនតាម Mobile Scanner"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>