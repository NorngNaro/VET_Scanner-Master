<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.LEDScanActivity">

    <include layout="@layout/app_bar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/branch"
                        android:textColor="@android:color/black" />

                    <Button
                        android:id="@+id/button_select_branch"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edit_text_height"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/outline_background_color_primary"
                        android:drawableEnd="@drawable/ic_nav_next"
                        android:gravity="start|center_vertical"
                        android:paddingStart="@dimen/edit_text_padding"
                        android:paddingEnd="@dimen/edit_text_padding"
                        android:text="@string/please_select"
                        android:textAllCaps="false" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llEdit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="15dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/edt_item_code_scan"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/edit_text_height"
                            android:layout_marginTop="4dp"
                            android:background="@drawable/outline_background_color_primary"
                            android:hint="@string/enter_item_code"
                            android:imeOptions="actionGo"
                            android:inputType="text"
                            android:maxLines="1"
                            android:focusable="true"
                            android:paddingStart="@dimen/edit_text_padding"
                            android:paddingEnd="@dimen/edit_text_padding"
                            android:textSize="@dimen/small_text_size" />
                        <ImageView
                            android:id="@+id/imgSearch"
                            android:padding="10dp"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/ic_search"
                            android:layout_width="50dp"
                            android:layout_height="50dp"/>
                    </RelativeLayout>

                    <FrameLayout
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imgScanQr"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/qr_icon" />
                    </FrameLayout>
                </LinearLayout>


                <EditText
                    android:id="@+id/edt_item_code"
                    android:layout_width="1dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/outline_background_color_primary"
                    android:hint="@string/enter_item_code"
                    android:imeOptions="actionGo"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingStart="@dimen/edit_text_padding"
                    android:paddingEnd="@dimen/edit_text_padding"
                    android:textSize="@dimen/small_text_size" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorPrimary" />


            </LinearLayout>


            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="2">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ព័ត៌មានបានស្កេន"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:focusable="false"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.recyclerview.widget.RecyclerView
                           android:id="@+id/scanLedRecycler"
                            android:focusable="false"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/relateNoData"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:focusable="false"
                            android:visibility="gone">

                            <ImageView
                                android:id="@+id/img_background"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:layout_gravity="center"
                                android:layout_margin="15dp"
                                android:alpha="0.3"
                                android:src="@drawable/empty_icon" />

                            <TextView
                                android:id="@+id/tvSendingItem"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/img_background"
                                android:layout_gravity="center"
                                android:alpha="0.3"
                                android:text="@string/no_record"
                                android:textAlignment="center"
                                android:textColor="@color/black" />
                        </androidx.appcompat.widget.LinearLayoutCompat>
                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ព័ត៌មានស្កេនចុងក្រោយ"
                        android:textColor="@color/black"
                        android:textStyle="bold"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:id="@+id/llItem"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:layout_marginTop="10dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <!--<LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:weightSum="3">

                                <TextView
                                    android:id="@+id/tvLocation"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.9"
                                    android:gravity="start"
                                    android:textSize="58sp"
                                    android:textStyle="bold"
                                    android:text=""
                                    android:textColor="@color/colorPrimary" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="កូដទីតាំង"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="24sp" />

                            </LinearLayout>-->

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:gravity="center"
                                android:weightSum="3">

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="ទីតាំង"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="24sp" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.1"
                                    android:text=":"
                                    android:textColor="@color/colorPrimary" />

                                <TextView
                                    android:id="@+id/tvLocation"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.9"
                                    android:gravity="start"
                                    android:text=""
                                    android:textSize="58sp"
                                    android:textColor="@color/colorPrimary" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:weightSum="3">

                                <TextView
                                    android:id="@+id/tvTitleCode"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="លេខកូដទំនិញ"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="24sp" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.1"
                                    android:text=":"
                                    android:textColor="@color/colorPrimary" />

                                <TextView
                                    android:id="@+id/tvCode"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.9"
                                    android:gravity="start"
                                    android:text=""
                                    android:textSize="24sp"
                                    android:textColor="@color/colorPrimary" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:weightSum="3">

                                <TextView
                                    android:id="@+id/tvTitleReceiverTel"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="អ្នកទទួល"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="24sp" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.1"
                                    android:text=":"
                                    android:textColor="@color/colorPrimary" />

                                <TextView
                                    android:id="@+id/tvTel"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.9"
                                    android:gravity="start"
                                    android:text=""
                                    android:textSize="24sp"
                                    android:textColor="@color/colorPrimary" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/locationName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:weightSum="3">

                                <TextView
                                    android:id="@+id/tvNameDestinationTo"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="ទិសដៅ"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="24sp" />

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.1"
                                    android:text=":"
                                    android:textColor="@color/colorPrimary" />

                                <TextView
                                    android:id="@+id/tvNameTo"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.9"
                                    android:gravity="start"
                                    android:textSize="24sp"
                                    android:text=""
                                    android:textColor="@color/colorPrimary" />

                            </LinearLayout>

                        </LinearLayout>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/llWrong"
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:background="@color/white"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <TextView
                                android:id="@+id/tvWrong"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1.9"
                                android:gravity="center_horizontal|center_vertical"
                                android:text="Alert"
                                android:textColor="@color/colorRed"
                                android:textSize="48sp"
                                android:textStyle="bold" />


                        </androidx.appcompat.widget.LinearLayoutCompat>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </LinearLayout>

    </RelativeLayout>

</androidx.appcompat.widget.LinearLayoutCompat>