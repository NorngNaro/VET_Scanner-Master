<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".activities.receivedCodeByBranch.ScanCodeActivity">
    <RelativeLayout

        android:id="@+id/relatetiveScan"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <com.journeyapps.barcodescanner.DecoratedBarcodeView
            android:id="@+id/barcode_scanner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:hardwareAccelerated="false"
            android:largeHeap="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:text="សូមចង្អុលកាមេរ៉ានៅ QR Code"
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnBack"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_margin="20dp"
            android:background="@color/colorAccent"
            android:text="@string/cancel"
            android:textColor="#fff" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relativeMobileScanner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edtScanValue"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/outline_background_color_primary"
                android:focusable="true"
                android:hint="@string/enter_item_code"
                android:imeOptions="actionGo"
                android:inputType="text"
                android:maxLines="1"
                android:padding="10dp"
                android:paddingStart="@dimen/edit_text_padding"
                android:paddingEnd="@dimen/edit_text_padding"
                android:textSize="@dimen/small_text_size" />

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:src="@drawable/qr_code" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="សូមចុចស្កែន"
                android:textSize="22sp" />
        </LinearLayout>


    </RelativeLayout>
</RelativeLayout>