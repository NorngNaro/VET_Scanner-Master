<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.receivedCodeByBranch.SearchActivity">

    <include
        layout="@layout/app_bar"/>
    <LinearLayout
        android:padding="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/branch"
                    android:textColor="@android:color/black" />

                <Button
                    android:id="@+id/button_select_branch"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/edit_text_height"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/outline_background_color_primary"
                    android:drawableEnd="@drawable/ic_nav_next"
                    android:gravity="start|center_vertical"
                    android:paddingStart="@dimen/edit_text_padding"
                    android:paddingEnd="@dimen/edit_text_padding"
                    android:text="@string/please_select"
                    android:textAllCaps="false" />
            </LinearLayout>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_gravity="start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:textSize="14sp"
                android:text="@string/enter_receiver_telephone"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edt_search_code_by_branch"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_text_height"
                android:layout_marginTop="10dp"
                android:background="@drawable/outline_background_color_primary"
                android:gravity="start"
                android:inputType="number"
                android:padding="@dimen/edit_text_padding"
                android:singleLine="true" />
        </LinearLayout>
        <Button
            android:id="@+id/btnSearch"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_effect"
            android:text="@string/search"
            android:textColor="@color/white" />
        <LinearLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:orientation="horizontal"
            android:weightSum="100"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/btn_transfer"
            app:layout_constraintTop_toBottomOf="@+id/btn_transfer">

            <View
                android:id="@+id/v1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="50"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/v2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/v1"
                android:text="@string/or"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/v2"
                android:layout_weight="50"
                android:background="@android:color/darker_gray" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:textSize="12sp"
                android:onClick="CameraScan"
                android:text="ស្កែនតាមកាមេរ៉ាទូរស័ព្ទ"
                android:textColor="@color/white" />
            <Button
                android:onClick="MobileScanner"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:id="@+id/btnMobileScan"
                android:textAllCaps="false"
                android:layout_width="match_parent"
                android:textSize="12sp"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:text="ស្កែនតាម Mobile Scanner"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>