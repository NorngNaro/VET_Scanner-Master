                    android:layout_weight="0.1" />

                <TextView
                    android:id="@+id/tvCOD"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="25$"
                    android:textAlignment="textEnd"
                    android:textColor="@android:color/black"
